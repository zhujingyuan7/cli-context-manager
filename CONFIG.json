{
  "thresholds": {
    "maxSizeKB": 500,
    "maxLines": 300
  },
  "compression": {
    "keepMessages": 100,
    "keepSystemLines": 5,
    "createBackup": true
  },
  "tools": {
    "claude-code": {
      "sessionDir": "~/.claude/sessions",
      "enabled": true,
      "format": "jsonl"
    },
    "aider": {
      "sessionDir": "~/.aider/sessions",
      "enabled": true,
      "format": "jsonl"
    },
    "codex": {
      "sessionDir": "~/.codex/sessions",
      "enabled": true,
      "format": "jsonl"
    },
    "gemini-cli": {
      "sessionDir": "~/.gemini-cli/sessions",
      "enabled": true,
      "format": "jsonl"
    },
    "opencode": {
      "sessionDir": "~/.opencode/sessions",
      "enabled": true,
      "format": "jsonl"
    }
  }
}
